---
layout: null
---
{
    "version": "https://jsonfeed.org/version/1.1",
    "title": {{ site.title | jsonify }},
    "description": {{ site.description | jsonify }},
    "home_page_url": {{ "/" | absolute_url | jsonify }},
    "feed_url": {{ "/feed.json" | absolute_url | jsonify }},
    "user_comment": {{ "This feed allows you to read the posts from this site in any feed reader that supports the JSON Feed format." | jsonify }},
    "favicon": {{ "/assets/images/favicon.ico" | absolute_url | jsonify }},
    "icon": {{ "/assets/images/logo.png" | absolute_url | jsonify }},
    "author": {
        "name": {{ site.author.name | jsonify }}{% if site.author.links[0].url %},
        "url": {{ site.author.links[0].url | jsonify }}{% endif %}
    },
    "items": [
        {% for post in site.posts limit: 20 %}
        {
            "id": {{ post.url | absolute_url | jsonify }},
            "url": {{ post.url | absolute_url | jsonify }},
            "title": {{ post.title | jsonify }},
            "content_html": {{ post.content | jsonify }},
            "summary": {{ post.excerpt | strip_html | truncatewords: 50 | jsonify }},
            "date_published": {{ post.date | date_to_xmlschema | jsonify }}{% if post.modified %},
            "date_modified": {{ post.modified | date_to_xmlschema | jsonify }}{% endif %}{% if post.author %},
            "author": {
                "name": {{ post.author | jsonify }}
            }{% endif %}{% if post.tags.size > 0 %},
            "tags": [
                {% for tag in post.tags %}{{ tag | jsonify }}{% unless forloop.last %},{% endunless %}{% endfor %}
            ]{% endif %}
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}
